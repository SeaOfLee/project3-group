<%= render 'layouts/sidenav' %>

  <div class="main_container">

    <%= form_for @user do |f| %>
      <%= f.text_field :first_name, :placeholder => "First Name" %><br />
      <%= f.text_field :last_name, :placeholder => "Last Name" %><br />
      <%= f.text_field :email, :placeholder => "Email" %><br />
      <%= f.password_field :password, :placeholder => "Password" %><br />
      <%= f.password_field :password_confirmation, :placeholder => "Password" %><br />
      <%= f.text_field :postal_code, :placeholder => "ZIP/Postal Code" %><br />
      <%= f.text_field :country, :placeholder => "Country" %><br />
      <%= select(:user, :program_attended, [['Product Management'], ['User Experience Design'], ['Web Development']]) %><br>
      <%= select(:user, :campus, [['Atlanta'], ['Austin'], ['Boston'], ['Chicago'], ['Hong Kong'], ['London'], ['Los Angeles'], ['Melbourne'], ['New York'], ['San Francisco'], ['Seattle'], ['Sydney'], ['Washington D.C.']]) %><br>
      <%= f.text_field :cohort, :placeholder => "Cohort" %><br />
      <%= f.text_field :bio, :placeholder => "Short Bio" %><br />
      <%= f.file_field :avatar %> <br />
      <%= f.submit 'Submit', class: 'button'  %><br />
    <% end %>

    <%= render 'layouts/places' %>

    <hr>
    Current User ID: <%= session["user_id"].inspect %><br>
    <%= params.inspect %>
    <br>
    <% if current_user != nil %>
    Logged in as: <%= current_user.email %> |
    <!-- method delete overrides button's normal behavior of POST -->
      <%= link_to "Log Out", sessions_path, method: :delete %>
    <% else %>
      <%= link_to 'Sign In', new_sessions_path %>
    <% end %>

</div>
