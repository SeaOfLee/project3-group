<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


      <%= f.text_field :first_name, autofocus: true, :placeholder => "First Name" %><br />
      <%= f.text_field :last_name, :placeholder => "Last Name" %><br />

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, :placeholder => "Email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Password" %>
  </div>

      <%= f.text_field :postal_code, :placeholder => "ZIP/Postal Code" %><br />
      <%= f.text_field :country, :placeholder => "Country" %><br />
      <%= f.text_field :program_attended, :placeholder => "Program Attended" %><br />
      <%= f.text_field :campus, id: 'location', :placeholder => "Campus" %><br />
      <%= f.text_field :cohort, :placeholder => "Cohort" %><br />
      <%= f.text_field :bio, :placeholder => "Short Bio" %><br />
      <%= f.file_field :avatar %> <br />


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
