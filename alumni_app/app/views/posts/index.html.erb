<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

  <% @posts.each do |post| %>
    <h3><%= link_to post.title, post %></h3>
    <p>Published <%= time_ago_in_words(post.created_at) %> ago by User</p>
    <p><%= post.comments.count %> replies</p>
    <hr />
  <% end %>

  <%= link_to "New Post", new_post_path %>
