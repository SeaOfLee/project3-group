<h1>Posts#index</h1>

  <%= link_to "New Post", new_post_path %>

  <% @posts.each do |post| %>
    <h3><%= link_to post.title, post %></h3>
    <p>Published <%= time_ago_in_words(post.created_at) %> ago by <%= post.user %></p>
    <p><%= post.comments.count %> replies</p>
    <hr />
  <% end %>

  <%= will_paginate @posts %>
